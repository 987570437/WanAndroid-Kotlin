<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent"
        tools:context=".user.activity.RegisterActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/tb_register"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>

    <com.xing.wanandroid.widget.ClearEditText
            android:hint="用户名"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_bottom_border"
            android:layout_marginRight="15dp"
            android:id="@+id/cet_register_username"
            app:clearIcon="@drawable/ic_clear_gray"
            app:tipIcon="@drawable/ic_login_user"
            android:layout_width="match_parent"
            android:layout_height="46dp"/>

    <com.xing.wanandroid.widget.ClearEditText
            android:layout_marginTop="10dp"
            android:id="@+id/cet_register_password"
            android:hint="密码"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_bottom_border"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            app:clearIcon="@drawable/ic_clear_gray"
            app:tipIcon="@drawable/ic_login_password"
            android:layout_width="match_parent"
            android:layout_height="46dp"/>

    <com.xing.wanandroid.widget.ClearEditText
            android:id="@+id/cet_register_repassword"
            android:hint="确认密码"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_bottom_border"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            app:clearIcon="@drawable/ic_clear_gray"
            app:tipIcon="@drawable/ic_login_password"
            android:layout_width="match_parent"
            android:layout_height="46dp"/>

    <Button android:background="@drawable/selector_btn_user"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/register"
            android:textSize="16sp"
            android:id="@+id/btn_register"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

</LinearLayout>