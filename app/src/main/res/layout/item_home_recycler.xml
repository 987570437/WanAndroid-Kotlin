<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:paddingLeft="15dp"
              android:paddingTop="10dp"
              android:background="@android:color/white"
              android:paddingBottom="10dp"
              android:paddingRight="15dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:textSize="16sp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/colorFont"
            tools:text="基于 wanandroid.com 开发的 MVP + Retrofit2 + RxJava2 +okhttp3 开发的 Android APP"
            android:id="@+id/tv_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp"
                  android:layout_height="wrap_content">

        <TextView
                tools:text="最新"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="1dp"
                android:textColor="@color/colorAccent"
                android:paddingBottom="1dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_recommend_bg"
                android:layout_width="wrap_content"
                android:id="@+id/tv_home_recent"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>


        <TextView
                tools:text="xing"
                android:layout_width="wrap_content"
                android:id="@+id/tv_home_author"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>


        <TextView
                tools:text="2019-09"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:id="@+id/tv_home_public_time"
                android:layout_height="wrap_content"/>

        <TextView
                tools:text="项目/recyclerview"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:id="@+id/tv_home_category"
                android:layout_height="wrap_content"/>


    </LinearLayout>


</LinearLayout>